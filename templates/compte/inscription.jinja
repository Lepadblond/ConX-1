{% extends "base.jinja" %}
{% block contenu %}
<div class="flex justify-center mt-40">
    <div class="flex flex-col">
        <h2 class="text-lg">Inscrivez-vous</h2>
        <div class="max-w-lg">
            <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" method="post" action="/compte/inscription"
                novalidate>
                <div class="form-outline mb-4">
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        placeholder="Nom" name="nom" id="nom" type="text" value="{{ nom }}">
                    {% if message.nom %}<span class="text-red-700">Le nom ne doit pas être vide</span>{% endif %}

                </div>
                <div class="form-outline mb-4">
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        placeholder="Prénom" name="prenom" id="prenom" type="text" value="{{ prenom }}">
                    {% if message.prenom %}<span class="text-red-700">Le prénom ne doit pas être vide</span>{% endif %}
                </div>
                <div class="form-outline mb-4">
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        placeholder="Courriel" name="mail" id="mail" type="email" value="{{ mail }}">

                    {% if message.mail %}<span class="text-red-700">Le courriel ne doit pas être vide</span>{% endif %}
                    {% if message.mail_existe %}<span class="text-red-700">Le courriel existe déja</span>{% endif %}
                </div>
                <div class="form-outline mb-4">
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        placeholder="Mot de passe" name="mdp" id="mdp" type="password">
                    {% if message.mdp %}<span class="text-red-700">Le mot de passe ne doit pas être vide</span>{% endif %}
                </div>
                <div class="form-outline mb-4">
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        placeholder="Confirmation du mot de passe" name="mdp2" id="mdp2" type="password">
                    {% if message.mdp2 %}<span class="text-red-700">Le mot de passe ne doit pas etre vide</span>{% endif %}
                    {% if message.mdpMatch %}<span class="text-red-700">Le mot de passe ne correspond pas</span>{% endif %}

                </div>
                <div class="flex items-center gap-3">
                    <button
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="submit">
                        Créer le compte
                    </button>
                    <p> Déjà un compte ? <a
                            class="inline-block align-baseline font-bold text-blue-500 hover:text-blue-800"
                            href="/">Se connecter</a></p>
                </div>
            </form>
        </div>
    </div>
</div>



{% endblock %}